<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/backGround"
    android:id="@+id/op"
    android:screenOrientation="portrait"
    tools:context="com.example.mitchell.playtoy.second_activity"
    tools:ignore="Overdraw"
    android:gravity="center_vertical|center_horizontal">


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="75sp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/tictactoe"
        android:textColor="@color/secondary"
        android:textSize="55sp"
        android:background="#ff0d0d0d"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical|center|center_horizontal" />

    <Button
        android:background="@drawable/border_bottom"
        android:layout_width="110sp"
        android:layout_height="110sp"
        android:textSize="90sp"
        android:id="@+id/BottomMiddle"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="110sp"
        android:layout_height="110sp"
        android:textSize="90sp"
        android:id="@+id/BottomRight"
        android:background="@color/backGround"
        android:layout_alignTop="@+id/BottomMiddle"
        android:layout_toRightOf="@+id/BottomMiddle"
        android:layout_toEndOf="@+id/BottomMiddle" />
    <Button
        android:layout_width="110sp"
        android:layout_height="110sp"
        android:textSize="90sp"
        android:id="@+id/BottomLeft"
        android:background="@color/backGround"
        android:layout_below="@+id/CenterMiddle"
        android:layout_toLeftOf="@+id/BottomMiddle"
        android:layout_toStartOf="@+id/BottomMiddle" />
    <Button
        android:layout_width="110sp"
        android:layout_height="110sp"
        android:textSize="90sp"
        android:id="@+id/CenterMiddle"
        android:background="@drawable/border"
        android:layout_above="@+id/BottomMiddle"
        android:layout_alignLeft="@+id/BottomMiddle"
        android:layout_alignStart="@+id/BottomMiddle"
        />

    <Button
        android:layout_width="110sp"
        android:layout_height="110sp"
        android:textSize="90sp"
        android:id="@+id/CenterLeft"
        android:background="@drawable/border_side"
        android:layout_above="@+id/BottomMiddle"
        android:layout_toLeftOf="@+id/BottomMiddle"
        android:layout_toStartOf="@+id/BottomMiddle"
        android:paddingTop="2dp"/>

    <Button
        android:layout_width="110sp"
        android:layout_height="110sp"
        android:textSize="90sp"
        android:id="@+id/CenterRight"
        android:background="@drawable/border_side"
        android:layout_above="@+id/BottomMiddle"
        android:layout_toRightOf="@+id/BottomMiddle"
        android:layout_toEndOf="@+id/BottomMiddle"
        android:paddingTop="2dp" />

    <Button
        android:layout_width="110sp"
        android:layout_height="110sp"
        android:textSize="90sp"
        android:background="@color/backGround"
        android:id="@+id/TopLeft"
        android:layout_above="@+id/CenterLeft"
        android:layout_alignLeft="@+id/CenterLeft"
        android:layout_alignStart="@+id/CenterLeft" />

    <Button
        android:layout_width="110sp"
        android:layout_height="110sp"
        android:textSize="90sp"
        android:id="@+id/TopMiddle"
        android:background="@drawable/border_bottom"
        android:layout_alignTop="@+id/TopLeft"
        android:layout_alignLeft="@+id/CenterMiddle"
        android:layout_alignStart="@+id/CenterMiddle" />

    <Button
        android:layout_width="110sp"
        android:layout_height="110sp"
        android:textSize="90sp"
        android:background="@color/backGround"
        android:id="@+id/TopRight"
        android:layout_alignTop="@+id/TopMiddle"
        android:layout_toRightOf="@+id/TopMiddle"
        android:layout_toEndOf="@+id/TopMiddle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="110sp"
        android:text="X"
        android:textSize="90sp"
        android:textColor="@color/play1"
        android:id="@+id/textView2"
        android:background="@color/Gray"
        android:layout_below="@+id/textView"
        android:layout_toLeftOf="@+id/TopMiddle"
        android:layout_alignLeft="@+id/TopLeft"
        android:layout_alignStart="@+id/TopLeft"
        android:gravity="center_vertical|center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="55sp"
        android:text="0"
        android:textColor="@color/play2"
        android:textSize="40sp"
        android:id="@+id/textView3"
        android:background="@color/backGround"
        android:layout_alignBottom="@+id/textView2"
        android:layout_toRightOf="@+id/textView2"
        android:layout_alignRight="@+id/TopMiddle"
        android:layout_alignEnd="@+id/TopMiddle"
        android:gravity="center_vertical|center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="110sp"
        android:text="O"
        android:textSize="90sp"
        android:textColor="@color/play2"
        android:id="@+id/textView4"
        android:background="@color/backGround"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignRight="@+id/TopRight"
        android:layout_alignEnd="@+id/TopRight"
        android:layout_alignLeft="@+id/TopRight"
        android:layout_alignStart="@+id/TopRight"
        android:gravity="center_vertical|center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="55sp"
        android:text="0"
        android:textColor="@color/play1"
        android:textSize="40sp"
        android:id="@+id/textView5"
        android:background="@color/Gray"
        android:gravity="center_vertical|center_horizontal"
        android:layout_above="@+id/textView3"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_toLeftOf="@+id/textView4"
        android:layout_toStartOf="@+id/textView4" />

</RelativeLayout>
