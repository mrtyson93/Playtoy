<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#ff222222"
    android:id="@+id/op"
    android:screenOrientation="portrait"
    tools:context="com.example.mitchell.playtoy.second_activity"
    tools:ignore="Overdraw">


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="75sp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/tictactoe"
        android:textColor="#ff0e6e76"
        android:textSize="55sp"
        android:background="#ff0d0d0d"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical|center|center_horizontal" />

    <Button
        android:background="@drawable/border_bottom"
        android:layout_width="110sp"
        android:layout_height="110sp"
        android:textSize="90sp"
        android:id="@+id/BottomMiddle"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="110sp"
        android:layout_height="110sp"
        android:textSize="90sp"
        android:id="@+id/BottomRight"
        android:background="#222222"
        android:layout_alignTop="@+id/BottomMiddle"
        android:layout_toRightOf="@+id/BottomMiddle"
        android:layout_toEndOf="@+id/BottomMiddle" />
    <Button
        android:layout_width="110sp"
        android:layout_height="110sp"
        android:textSize="90sp"
        android:id="@+id/BottomLeft"
        android:background="#222222"
        android:layout_below="@+id/CenterMiddle"
        android:layout_toLeftOf="@+id/BottomMiddle"
        android:layout_toStartOf="@+id/BottomMiddle" />
    <Button
        android:layout_width="110sp"
        android:layout_height="110sp"
        android:textSize="90sp"
        android:id="@+id/CenterMiddle"
        android:background="@drawable/border"
        android:layout_above="@+id/BottomMiddle"
        android:layout_alignLeft="@+id/BottomMiddle"
        android:layout_alignStart="@+id/BottomMiddle"
        />

    <Button
        android:layout_width="110sp"
        android:layout_height="110sp"
        android:textSize="90sp"
        android:id="@+id/CenterLeft"
        android:background="@drawable/border_side"
        android:layout_above="@+id/BottomMiddle"
        android:layout_toLeftOf="@+id/BottomMiddle"
        android:layout_toStartOf="@+id/BottomMiddle"
        android:paddingTop="2dp"/>

    <Button
        android:layout_width="110sp"
        android:layout_height="110sp"
        android:textSize="90sp"
        android:id="@+id/CenterRight"
        android:background="@drawable/border_side"
        android:layout_above="@+id/BottomMiddle"
        android:layout_toRightOf="@+id/BottomMiddle"
        android:layout_toEndOf="@+id/BottomMiddle"
        android:paddingTop="2dp" />

    <Button
        android:layout_width="110sp"
        android:layout_height="110sp"
        android:textSize="90sp"
        android:background="#222222"
        android:id="@+id/TopLeft"
        android:layout_above="@+id/CenterLeft"
        android:layout_alignLeft="@+id/CenterLeft"
        android:layout_alignStart="@+id/CenterLeft" />

    <Button
        android:layout_width="110sp"
        android:layout_height="110sp"
        android:textSize="90sp"
        android:id="@+id/TopMiddle"
        android:background="@drawable/border_bottom"
        android:layout_alignTop="@+id/TopLeft"
        android:layout_alignLeft="@+id/CenterMiddle"
        android:layout_alignStart="@+id/CenterMiddle" />

    <Button
        android:layout_width="110sp"
        android:layout_height="110sp"
        android:textSize="90sp"
        android:background="#222222"
        android:id="@+id/TopRight"
        android:layout_alignTop="@+id/TopMiddle"
        android:layout_toRightOf="@+id/TopMiddle"
        android:layout_toEndOf="@+id/TopMiddle" />
</RelativeLayout>
